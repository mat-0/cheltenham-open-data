---
{% assign contents_of_page = site.pages | where: "name", "news.md" | first %}
{% assign pub_date = site.time | date: "%Y-%m-%d" %}

<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
  <channel>
    <title>Local Daily News Aggregator</title>
    <link>https://cod.thechels.uk/news</link>
    <description>{{ site.description }}</description>
    <item>
      <title>Daily News for {{ pub_date }}</title>
      <link>https://cod.thechels.uk/news</link>
      <description>
      <![CDATA[ {{ contents_of_page.content }} ]]>
      </description>
      <pubDate>{{ pub_date }}</pubDate>
    </item>
  </channel>
</rss>
